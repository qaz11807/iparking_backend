  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true
  }
}
